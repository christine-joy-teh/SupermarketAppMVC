<%- include('partials/head', { pageTitle: 'Shopping - Supermarket App' }) %>
<%- include('partials/navbar', {
  searchConfig: {
    action: '/shopping',
    queryValue: (typeof q !== 'undefined') ? q : '',
    sortValue: (typeof sort !== 'undefined') ? sort : '',
    sortOptions: [
      { value: '', label: 'Sort' },
      { value: 'price_asc', label: 'Price: Low ↑' },
      { value: 'price_desc', label: 'Price: High ↓' }
    ],
    buttonLabel: 'Search'
  },
  navLinksRight: [
    { href: '/cart', label: 'Cart', badgeValue: cartCount, badgeClass: 'bg-primary', classes: 'position-relative' },
    { href: '/orders/history', label: 'My Orders' },
    { href: '/logout', label: 'Logout' }
  ]
}) %>

  <div class="container mt-4">
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>

    <% /* Prepare a set of bestseller ids for quick lookup */ %>
    <% const bestsellerSet = new Set((typeof bestsellers !== 'undefined' ? bestsellers : []).map(id => Number(id))); %>

    <p>Welcome, <%= user ? user.username : 'guest' %> (<%= user ? user.role : 'none' %>)</p>
    <div class="text-center"><h2>Products from Supermarket</h2></div>
    <br>

    <div class="row">
      <% products.forEach((p) => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100 <%= bestsellerSet.has(Number(p.id)) ? 'bestseller' : '' %> position-relative">
            <% if (bestsellerSet.has(Number(p.id))) { %>
              <div class="ribbon-top-left"><span>Bestseller</span></div>
            <% } %>
            <% if (p.image) { %>
              <img src="/images/<%= p.image %>" class="card-img-top" style="height:160px;object-fit:cover;">
            <% } else { %>
              <div class="bg-light d-flex align-items-center justify-content-center" style="height:160px;">No image</div>
            <% } %>
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start">
                <h5 class="card-title"><a href="/product/<%= p.id %>"><%= p.productName %></a></h5>
                <% if (bestsellerSet.has(Number(p.id))) { %>
                  <div class="bestseller-badge">Bestseller</div>
                <% } %>
              </div>
              <p class="mb-1">Available: <%= p.quantity %></p>
              <% const discount = Number(p.discountPercent) || 0; const salePrice = discount > 0 ? (p.price * (1 - discount/100)) : p.price; %>
              <p class="mb-2">
                Price:
                <% if (discount > 0) { %>
                  <span class="text-muted text-decoration-line-through">$<%= p.price.toFixed(2) %></span>
                  <span class="ms-1 fw-bold text-success">$<%= salePrice.toFixed(2) %></span>
                  <span class="badge bg-danger ms-1">-<%= discount %>%</span>
                <% } else { %>
                  $<%= p.price.toFixed(2) %>
                <% } %>
              </p>

              <form action="/add-to-cart/<%= p.id %>" method="POST" class="mt-auto d-flex">
                <select class="form-select me-2" name="quantity" style="width:80px;">
                  <% for (let q = 1; q <= Math.min(10, p.quantity || 10); q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
                <button class="btn btn-primary">Add</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
<%- include('partials/footer') %>
