<%- include('partials/head', { pageTitle: 'Cart - Supermarket App' }) %>
<%- include('partials/navbar', {
  navLinksRight: [
    { href: '/cart', label: 'Cart', badgeValue: cartCount, badgeClass: 'bg-primary', classes: 'position-relative' },
    { href: '/shopping', label: 'Shop' },
    { href: '/logout', label: 'Logout' }
  ]
}) %>
  <!-- Cart Content -->
  <div class="container mt-4">
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>

    <h2 class="mt-2">Shopping Cart</h2>
    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
      <a href="/shopping" class="btn btn-primary">Browse Products</a>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><%= cart[i].productName %></td>
                <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>
                <td><%= cart[i].quantity %></td>
                <td>$<%= cart[i].price.toFixed(2) %></td>
                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% } %>
        </tbody>
      </table>
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <% const promoDetails = (typeof promo !== 'undefined' && promo) ? promo : null; %>
          <h5 class="mb-1">Subtotal: $<%= total.toFixed(2) %></h5>
          <% if (promoDetails && promoDetails.totalSavings > 0) { %>
            <div class="text-success">Promotion applied: -$<%= promoDetails.totalSavings.toFixed(2) %> (<%= promoDetails.dairyCount %> dairy items)</div>
            <h4 class="mt-2">Total: $<%= promoDetails.totalAfter.toFixed(2) %></h4>
          <% } else { %>
            <h4 class="mt-2">Total: $<%= total.toFixed(2) %></h4>
          <% } %>
        </div>
      </div>

      <div class="mt-4 d-flex">
        <a href="/shopping" class="btn btn-secondary me-2">Back to Shopping</a>
        <form action="/checkout" method="POST">
          <button class="btn btn-success">Checkout</button>
        </form>
      </div>
    <% } %>
  </div>
<%- include('partials/footer') %>
