<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item me-2">
            <a class="nav-link position-relative" href="/cart">Cart
              <span class="badge bg-primary ms-1"><%= cartCount %></span>
            </a>
          </li>
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Cart Content -->
  <div class="container mt-4">
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>

    <h2 class="mt-2">Shopping Cart</h2>
    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
      <a href="/shopping" class="btn btn-primary">Browse Products</a>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><%= cart[i].productName %></td>
                <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>
                <td><%= cart[i].quantity %></td>
                <td>$<%= cart[i].price.toFixed(2) %></td>
                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% } %>
        </tbody>
      </table>
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <% const promoDetails = (typeof promo !== 'undefined' && promo) ? promo : null; %>
          <h5 class="mb-1">Subtotal: $<%= total.toFixed(2) %></h5>
          <% if (promoDetails && promoDetails.totalSavings > 0) { %>
            <div class="text-success">Promotion applied: -$<%= promoDetails.totalSavings.toFixed(2) %> (<%= promoDetails.dairyCount %> dairy items)</div>
            <h4 class="mt-2">Total: $<%= promoDetails.totalAfter.toFixed(2) %></h4>
          <% } else { %>
            <h4 class="mt-2">Total: $<%= total.toFixed(2) %></h4>
          <% } %>
        </div>
      </div>

      <div class="mt-4 d-flex">
        <a href="/shopping" class="btn btn-secondary me-2">Back to Shopping</a>
        <form action="/checkout" method="POST">
          <button class="btn btn-success">Checkout</button>
        </form>
      </div>
    <% } %>
  </div>
</body>
</html>
