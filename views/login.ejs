<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Login - Supermarket App</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          <li class="nav-item"><a class="nav-link active" href="/login">Login</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="min-vh-75 d-flex align-items-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
          <div class="card p-4">
            <div class="card-body">
              <h2 class="mb-3">Login</h2>
              <p class="text-muted">Sign in to access shopping & your cart</p>

              <% if ((typeof error !== 'undefined' && error.length) || (typeof errors !== 'undefined' && errors.length)) { %>
                <div class="alert alert-danger mt-3">
                  <% if (typeof error !== 'undefined' && error.length) { %>
                    <%= error[0] %>
                  <% } else { %>
                    <% errors.forEach(e => { %>
                      <div><%= e %></div>
                    <% }) %>
                  <% } %>
                </div>
              <% } %>

              <% if ((typeof success !== 'undefined' && success.length) || (typeof messages !== 'undefined' && messages.length)) { %>
                <div class="alert alert-success mt-3">
                  <% if (typeof success !== 'undefined' && success.length) { %>
                    <%= success[0] %>
                  <% } else { %>
                    <% messages.forEach(m => { %>
                      <div><%= m %></div>
                    <% }) %>
                  <% } %>
                </div>
              <% } %>

              <form action="/login" method="POST" class="mt-3">
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="you@example.com" required>
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Your password" required>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="remember">
                    <label class="form-check-label" for="remember">Remember me</label>
                  </div>
                  <a href="#" class="small">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Sign In</button>
              </form>

              <div class="text-center mt-3">
                <small class="text-muted">Don't have an account? <a href="/register">Create one</a></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <section class="membership py-4 bg-light">
    <div class="container">
      <div class="text-center mb-3">
        <h4>Membership plans</h4>
        <p class="text-muted small">Choose during sign up to unlock delivery and discounts.</p>
      </div>

      <div class="plan-row">
        <div class="plan-card" data-plan="basic" onclick="location='/register?plan=basic'">
          <div class="plan-name">Basic</div>
          <div class="plan-price">Free</div>
          <div class="plan-features">Browse products & standard checkout</div>
          <button class="btn btn-outline-primary btn-select btn-sm mt-auto">Join Basic</button>
        </div>

        <div class="plan-card plan-selected" data-plan="silver" onclick="location='/register?plan=silver'">
          <div class="recommended">Recommended</div>
          <div class="plan-name">Silver</div>
          <div class="plan-price">$4.99 / mo</div>
          <div class="plan-features">Free delivery over $50 • 5% off selected items</div>
          <button class="btn btn-primary btn-select btn-sm mt-auto">Get Silver</button>
        </div>

        <div class="plan-card bestseller" data-plan="gold" onclick="location='/register?plan=gold'">
          <div class="plan-name">Gold</div>
          <div class="plan-price">$9.99 / mo</div>
          <div class="plan-features">Free delivery • 10% off storewide • Priority support</div>
          <button class="btn btn-warning btn-select btn-sm mt-auto">Get Gold</button>
        </div>
      </div>
    </div>
  </section>
</body>
</html>
