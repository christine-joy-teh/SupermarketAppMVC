<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Supermarket App</title>
  <style>
    body { padding-bottom: 40px; }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <form class="d-flex ms-auto me-3" role="search" action="/" method="GET">
            <input class="form-control me-2" type="search" placeholder="Search products" aria-label="Search" name="q" value="<%= typeof q !== 'undefined' ? q : '' %>">
            <select class="form-select me-2" name="sort">
              <option value="">Sort</option>
              <option value="price_asc">Price: Low &uarr;</option>
              <option value="price_desc">Price: High &darr;</option>
            </select>
            <button class="btn btn-outline-light" type="submit">Search</button>
          </form>

          <ul class="navbar-nav">
            <li class="nav-item me-2">
              <a class="nav-link position-relative" href="/cart">Cart
                <span class="badge bg-primary ms-1"><%= cartCount %></span>
              </a>
            </li>
            <% if (!user) { %>
              <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
              <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <% } else { %>
              <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <!-- Hero header: welcome title + subtitle -->
      <div class="py-5 text-center bg-light rounded mb-4">
        <h1 class="display-5">Welcome to the Supermarket App</h1>
        <p class="lead">Shop for fruits, dairy products, bread, and more.</p>
      </div>
      <% if (success && success.length) { %>
        <div class="alert alert-success"><%= success[0] %></div>
      <% } %>
      <% if (error && error.length) { %>
        <div class="alert alert-danger"><%= error[0] %></div>
      <% } %>

      <div class="text-center mb-3">
        <% if (user) { %>
          <% if (user.role === 'admin') { %>
            <h5 class="mb-1">Welcome back, <%= user.username %> (admin)</h5>
            <p><a href="/inventory">Manage inventory</a></p>
          <% } else { %>
            <h5 class="mb-1">Welcome back, <%= user.username %>!</h5>
            <p><a href="/shopping">Continue shopping</a></p>
          <% } %>
        <% } else { %>
          <div class="d-grid gap-2 col-6 mx-auto">
            <a href="/login" class="btn btn-lg btn-primary">Log in to start shopping</a>
            <a href="/register" class="btn btn-outline-secondary">Create an account</a>
          </div>
        <% } %>
      </div>

      <% if (promotions && promotions.length) { %>
        <div id="promoCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% promotions.forEach(function(promo, idx) { %>
              <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
                <% if (promo.image) { %>
                  <img src="<%= promo.image %>" class="d-block w-100" style="height:220px;object-fit:cover;">
                <% } else { %>
                  <div class="d-block w-100 bg-secondary text-white d-flex align-items-center justify-content-center" style="height:220px;"> <h3><%= promo.title %></h3> </div>
                <% } %>
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                  <h5><%= promo.title %></h5>
                  <p><%= promo.subtitle %></p>
                </div>
              </div>
            <% }) %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </button>
        </div>
      <% } %>

      <!-- Membership moved to Login/Register pages -->

      <% if (bestsellers && bestsellers.length) { %>
        <h4 class="mb-3">Bestsellers</h4>
        <div class="row">
          <% bestsellers.forEach(function(bs) { %>
            <div class="col-md-3 mb-3">
              <div class="card h-100 bestseller position-relative">
                <div class="ribbon-top-left"><span>Bestseller</span></div>
                <% if (bs.image) { %>
                  <img src="/images/<%= bs.image %>" class="card-img-top" style="height:140px;object-fit:cover;">
                <% } else { %>
                  <div class="bg-light d-flex align-items-center justify-content-center" style="height:140px;">No image</div>
                <% } %>
                <div class="card-body d-flex flex-column">
                  <div class="d-flex justify-content-between align-items-start">
                    <h6 class="card-title"><a href="/product/<%= bs.id %>"><%= bs.productName %></a></h6>
                    <div class="bestseller-badge">Bestseller</div>
                  </div>
                  <p class="mb-1">$<%= bs.price.toFixed(2) %></p>
                  <form action="/add-to-cart/<%= bs.id %>" method="POST" class="mt-auto d-flex">
                    <input type="hidden" name="quantity" value="1">
                    <button class="btn btn-sm btn-warning">Quick Add</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <% if (products && products.length) { %>
        <div class="row mt-4">
          <% products.forEach(product => { %>
            <div class="col-md-3 mb-3">
              <div class="card h-100">
                <% if (product.image) { %>
                  <img src="/images/<%= product.image %>" class="card-img-top" style="height:160px;object-fit:cover;">
                <% } else { %>
                  <div class="bg-light d-flex align-items-center justify-content-center" style="height:160px;">No image</div>
                <% } %>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><a href="/product/<%= product.id %>"><%= product.productName %></a></h5>
                  <p class="card-text mb-2">$<%= product.price.toFixed(2) %></p>
                  <div class="mt-auto">
                    <a href="/product/<%= product.id %>" class="btn btn-outline-primary btn-sm">Details</a>
                    <% if (user && user.role === 'user') { %>
                      <a href="/shopping" class="btn btn-primary btn-sm ms-2">Buy</a>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  
</body>
</html>