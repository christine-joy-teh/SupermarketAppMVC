<%- include('partials/head', { pageTitle: 'Inventory - Supermarket App', bodyClass: 'inventory-page' }) %>
<%- include('partials/navbar', {
  navLinksLeft: [
    { href: '/inventory', label: 'Inventory', active: true },
    { href: '/addProduct', label: 'Add Product' }
  ],
  navLinksRight: [
    { textOnly: true, text: `Welcome, ${user ? user.username : ''} (${user ? user.role : ''})`, className: 'me-3', textClass: 'text-white' },
    { href: '/logout', label: 'Logout' }
  ]
}) %>

  <div class="container py-5 inventory-container">
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="card inventory-card p-4">
          <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
            <div class="inventory-heading">
              <p class="text-uppercase text-muted fw-semibold small mb-1">Inventory Overview</p>
              <h3 class="mb-0">Products</h3>
              <small class="text-muted">Products from Supermarket App Database</small>
            </div>
            <div>
              <a href="/addProduct" class="btn btn-primary add-product-btn">
                <span class="me-1">+</span> Add new product
              </a>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table product-table align-middle mb-0">
              <thead>
                <tr>
                  <th class="ps-3">Product</th>
                  <th class="text-center">Image</th>
                  <th class="text-center">Quantity</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(function(p){ %>
                  <tr class="product-row">
                    <td class="ps-3">
                      <div class="d-flex flex-column">
                        <a href="/product/<%= p.id %>" class="product-name"><%= p.productName %></a>
                        <small class="text-muted">SKU #<%= p.id %></small>
                      </div>
                    </td>
                    <td class="text-center">
                      <% if (p.image) { %>
                        <img src="/images/<%= p.image %>" alt="<%= p.productName %>" class="inventory-image">
                      <% } else { %>
                        <div class="text-muted">No image</div>
                      <% } %>
                    </td>
                    <td class="text-center">
                      <span class="inventory-quantity"><%= p.quantity %></span>
                    </td>
                    <td class="text-center">
                      <span class="inventory-price">$<%= p.price.toFixed(2) %></span>
                    </td>
                    <td class="text-center">
                      <div class="d-flex justify-content-center gap-2">
                        <a href="/updateProduct/<%= p.id %>" class="btn btn-sm btn-outline-primary soft-btn">Edit</a>
                        <a href="/deleteProduct/<%= p.id %>" class="btn btn-sm btn-outline-danger soft-btn" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('partials/footer') %>
