<%- include('partials/head', { pageTitle: 'Cart - Supermarket App' }) %>
<%- include('partials/navbar', {
  navLinksRight: [
    { href: '/cart', label: 'Cart', badgeValue: cartCount, badgeClass: 'bg-primary', classes: 'position-relative' },
    { href: '/orders/history', label: 'My Orders' },
    { href: '/shopping', label: 'Shop' },
    { href: '/logout', label: 'Logout' }
  ]
}) %>
  <!-- Cart Content -->
  <div class="container mt-4">
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length) { %>
      <div class="alert alert-danger"><%= error[0] %></div>
    <% } %>

    <h2 class="mt-2">Shopping Cart</h2>
    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
      <a href="/shopping" class="btn btn-primary">Browse Products</a>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th style="width: 180px;">Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th class="text-center" style="width: 140px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><%= cart[i].productName %></td>
                <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>
                <td>
                  <form action="/cart/item/<%= cart[i].productId %>/update" method="POST" class="d-flex align-items-center gap-2">
                    <input type="number" name="quantity" min="0" step="1" value="<%= cart[i].quantity %>" class="form-control form-control-sm" style="width: 80px;">
                    <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                  </form>
                </td>
                <td>
                  <% const orig = typeof cart[i].originalPrice !== 'undefined' ? Number(cart[i].originalPrice) : Number(cart[i].price); %>
                  <% const sale = Number(cart[i].price); %>
                  <% if (orig > sale) { %>
                    <span class="text-muted text-decoration-line-through">$<%= orig.toFixed(2) %></span>
                    <span class="ms-1 fw-bold text-success">$<%= sale.toFixed(2) %></span>
                  <% } else { %>
                    $<%= sale.toFixed(2) %>
                  <% } %>
                </td>
                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
                <td class="text-center">
                  <form action="/cart/item/<%= cart[i].productId %>/delete" method="POST" onsubmit="return confirm('Remove this item?');">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                  </form>
                </td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% } %>
        </tbody>
      </table>
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <% const promoDetails = (typeof promo !== 'undefined' && promo) ? promo : null; %>
          <h5 class="mb-1">Subtotal: $<%= total.toFixed(2) %></h5>
          <% if (promoDetails) { %>
            <div class="text-muted small">
              Promo: <%= promoDetails.promo && promoDetails.promo.percent ? promoDetails.promo.percent : 0 %>% off
              <%= promoDetails.promo && promoDetails.promo.keywords ? promoDetails.promo.keywords.join(', ') : 'selected items' %>
            </div>
            <% if (promoDetails.totalSavings > 0) { %>
              <div class="text-success">Promotion applied: -$<%= promoDetails.totalSavings.toFixed(2) %></div>
              <h4 class="mt-2">Total: $<%= promoDetails.totalAfter.toFixed(2) %></h4>
            <% } else { %>
              <h4 class="mt-2">Total: $<%= total.toFixed(2) %></h4>
            <% } %>
          <% } else { %>
            <h4 class="mt-2">Total: $<%= total.toFixed(2) %></h4>
          <% } %>
        </div>
      </div>

      <div class="mt-4 d-flex">
        <a href="/shopping" class="btn btn-secondary me-2">Back to Shopping</a>
        <form action="/checkout" method="POST">
          <button class="btn btn-success">Checkout</button>
        </form>
      </div>
    <% } %>
  </div>
<%- include('partials/footer') %>
